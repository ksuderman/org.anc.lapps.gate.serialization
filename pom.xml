    <artifactId>serialization</artifactId>
    <version>2.1.0-SNAPSHOT</version>
    <name>GATE Serialization Library</name>
    <description>Classes to convert between GATE/XML documents and the Lapps Interchange Format.</description>
    <url>https://github.com/oanc/org.anc.lapps.gate.serialization</url>
    <licenses>
        <license>
            <name>The Apache License. Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>
    <scm>
        <url>https://github.com/oanc/org.anc.lapps.gate.serialization</url>
        <connection>scm:git:https://github.com/oanc/org.anc.lapps.gate.serialization.git</connection>
        <developerConnection>scm:git:https://github.com/oanc/org.anc.lapps.gate.serialization.git</developerConnection>
    </scm>
    <issueManagement>
        <url>https://github.com/oanc/org.anc.lapps.gate.serialization/issues</url>
        <system>GitHub issues</system>
